{
  "name": "harmonic-depths",
  "version": "1.0.0",
  "description": "An explorer for prime harmonic territory - sounds that Western tuning cannot express",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.harmonic.depths",
    "productName": "Harmonic Depths",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*"
    ],
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Audio"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.music"
    },
    "win": {
      "target": ["nsis", "portable"]
    }
  }
}
